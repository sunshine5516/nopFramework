@using NopFramework.Web.Models.Customer
@using NopFramework.Web.Framework.UI
@using NopFramework.Web.Framework
@using NopFramework.Core.Infrastructure
@model RegisterModel
@{
    Layout = "~/Views/Shared/LoginRegis.cshtml";
}

<body class="hold-transition register-page">
    <div class="g-topNav">
        <div class="g-topNav__body">
            <div class="m-topNav">
                <a class="m-topNav__logo" href="/" target="_self">
                    <img class="m-topNav__logo-img" src="~/Content/Images/team/placeholder.gif" width="111" alt="网易七鱼logo">
                </a>
                <span class="m-topNav__logo-txt j-modalTitle">帐号登录</span>
            </div>
        </div>
    </div>
    <div class="wrap-form">
        <div class="login-form">
            <div class="register-title">
                衡芯生物
            </div>

            <div class="register-box-body">
                <p class="login-box-msg">注册一个新的成员</p>
                @using (Html.BeginForm())
                {
                    <div class="form-group has-feedback ">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "全名" })
                        @Html.ValidationMessageFor(m => m.UserName)
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Email, new { @class = "email form-control", placeholder = "邮箱" })
                        @Html.ValidationMessageFor(m => m.Email)
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new { @class = "password form-control", placeholder = "密码" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "password form-control", placeholder = "再次输入密码" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    </div>

                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> 记住密码
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">注册</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
                @Html.ActionLink("我已经有一个会员", "Logon")
            </div>
        </div>

        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 2.2.3 -->
    <script src="../plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="../bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

</body>
