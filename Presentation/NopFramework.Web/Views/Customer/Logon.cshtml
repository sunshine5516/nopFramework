@using NopFramework.Web.Models.Customer
@using NopFramework.Web.Framework.UI
@using NopFramework.Web.Framework
@using NopFramework.Core.Infrastructure
@model LoginModel
@{
    Layout = "~/Views/Shared/LoginRegis.cshtml";
}



<body class="hold-transition login-page">
    <div class="g-topNav">
        <div class="g-topNav__body">
            <div class="m-topNav">
                <a href="@Url.RouteUrl("HomePage")" class="m-topNav__logo">
                    <img class="m-topNav__logo-img" src="~/Content/Images/Logo/homeLogo.png" width="111" alt="网易七鱼logo">
                </a>
                <span class="m-topNav__logo-txt j-modalTitle">帐号登录</span>
            </div>
        </div>
    </div>
    <div class="wrap-form">

        <div class="login-form">
            <div class="register-title">
                衡芯生物
            </div>

            <div class="register-box-body">
                <p class="login-box-msg">注册一个新的成员</p>
                @using (Html.BeginForm())
                {
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Email, new { @class = "email form-control", placeholder = "邮件" })
                        @Html.ValidationMessageFor(m => m.Email)
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>

                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new { @class = "password form-control", placeholder = "密码" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                @Html.CheckBoxFor(m => m.RemberMe)
                                @Html.LabelFor(m => m.RemberMe)
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                        </div>
                    </div>

                }
                @Html.ActionLink("忘记密码", "#")
                <br />
                @Html.ActionLink("注册帐号", "Register")
            </div>
        </div>

        <!-- /.form-box -->
    </div>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
