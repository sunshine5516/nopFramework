@using NopFramework.Admin.Models.Cms
@using NopFramework.Web.Framework.UI
@using NopFramework.Core.Infrastructure
@using NopFramework.Web.Framework
@model WidgetModel
@{
    ViewBag.Title = "配置窗口小部件";
    Html.SetActiveMenuItemSystemName("Widgets");
}

<div class="content-header clearfix">
    <h1 class="pull-left">
        配置 -@Model.FriendlyName
        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("返回挂件列表", "List")</small>
    </h1>
    <div class="pull-right">
        &nbsp;
    </div>
</div>
<div class="content">
    <div class="form-horizontal">
        @if (!String.IsNullOrEmpty(Model.ConfigurationActionName))
        {
            @Html.Action(Model.ConfigurationActionName, Model.ConfigurationControllerName, Model.ConfigurationRouteValues);
        }
        else
        {
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        需要配置界面
                    </div>
                </div>
            </div>
        }

    </div>
</div>

